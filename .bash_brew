#!/bin/bash

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until the script has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

brew update # Make sure weâ€™re using the latest Homebrew
brew upgrade --all # Upgrade any already-installed formulae

# Brew
brew tap caskroom/cask # note: as of December 2015, cask comes installed with Homebrew directly
brew tap pivotal/tap # ?

# Docker
brew install boot2docker
brew install docker
brew install docker-machine
brew install docker-compose
brew install docker-swarm
brew install fig

# Databases
brew install mysql
brew install sqllite
brew install mongodb
brew install redis

# Development
brew install python
brew install python3
brew install maven
brew install gradle
brew install node
brew install octave
brew install jenv
brew install scala
brew install sbt
brew install typesafe-activator

# Cloud and Big Data
brew install apache-spark
brew install storm
brew install cloudfoundry-cli

# Science
brew tap homebrew/science
brew install r
# ...

# System
brew install tree
brew install findutils # find, locate, xargs...
brew install dark-mode
brew install figlet # text to ASCII art converter

# Completion
brew tap homebrew/completions
brew install bash-completion
brew install docker-completion
brew install maven-completion
brew install vagrant-completion

brew cleanup # Remove outdated versions from the cellar

